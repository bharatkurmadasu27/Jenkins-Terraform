pipeline {
    agent any

    
    environment {
       AWS_ACCESS_KEY_ID     = credentials('da0ad029-017f-4912-bc73-88a8e2eaeae1')
       AWS_SECRET_ACCESS_KEY = credentials('47f65cd2-139d-4be7-adca-516a7c8c518c')
    }

    stages {
      stage('fetch_latest_code') {
        steps {
        git branch: 'master', url: 'https://github.com/bharatkurmadasu27/Jenkins-Terraform.git'
 }
      }
    
      stage('TF Init&Plan') {
        steps {
          sh 'terraform init'
          sh 'terraform plan'
          }
      }

      stage('Manual Approval') {
            steps {
      input(id: 'manual-approval', message: 'Do you want to proceed?', ok: 'Proceed')
            }
        }

       stage('TF Apply') {
        steps {
          sh 'terraform apply -auto-approve'
        }
      
    } 
  }
}
